<!--ユーザーの情報-->
<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<!--ユーザー編集-->
<div class="row">
  <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-block' do %>
  <i class="fas fa-user-cog" style="color: #62676f;"></i>
  <% end %>
</div>

<!--新規book-->
<h2 class="mt-3">New book</h2>
<%= form_with model: @new_book, url: books_path do |f| %>
<div class="form-group">
  <label for="book_title">Title</label>
  <%= f.text_field :title, id:"Title", class: 'form-control' %>
</div>
<div class="form-group">
  <label for="book_opinion">Opinion</label>
  <%= f.text_area :body, id:"Opinion", class: 'form-control' %>
</div>
<div><%= f.submit 'Create Book', class: 'btn btn-success' %></div>
<% end %>
